
<div id="avatar-women">
            <fieldset>
  <legend>Votre avatar :</legend>

            {% set checked = "" %}

            {% for i in 1..99 %}

            {% if candidate.avatar is defined %}
                {% if candidate.avatar.gender == "women" %}

                {% set picture = candidate.avatar.picture %}

                    {% if i == picture %}

                    {% set checked = "checked" %}

                    {% else %}

                    {% set checked = "" %}

                    {% endif %} 

                {% endif %}

            {% endif %}
                            <label>
                
                <img class="avatar-mini" src="/build/media/image/icons/avatar/women/{{i}}.png" alt="Option 2"><input type="radio" name="women-avatar" value="{{i}}" {{checked}}>
                </label>
            {% endfor %}

        </fieldset>

</div>



    <div id="create-recruiter" class="stepform dataform" data-action="create-recruiter">
    <h1>S'inscrire en tant que recruteur</h1>



            {% if message != NULL %}


            {% if error == 1 %}


            {% set class = "errormessage" %}

            {% else %}


            {% set class = "validmessage" %}

            {% endif %}

                <p class="{{class}}">{{ message }}</p>

            {% endif %}
                

            
            {{ form_start(form) }}

            <div id="step1" class="step">
                <h3>Votre identité</h3>
                
                {{ form_row(form.firstname) }}
                {{ form_row(form.lastname) }}
                <nav class="movestep" data-step="2">Etape suivante</nav>

            </div>

            <div id="step2" class="step hidden" >
                <h3>Votre compte</h3>
                {{ form_row(form.login) }}
                {{ form_row(form.email) }}
                {{ form_row(form.password) }}
                <div><label>Confirmer votre mot de passe</label><input type="password" required="required" name="confirm_password"/></div>


                <div class="flexible">
                <nav class="movestep" data-step="1">Etape précédente</nav>

                {{ form_row(form.submit) }}
                </div>
            
            </div>

            {{ form_end(form) }}

       

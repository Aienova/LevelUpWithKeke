<table id="table-resa1" class="table-resa">
    <thead>
        <tr>
            <th>Titre de la article</th>
            <th>Lien</th>
            <th>Date de creation</th>
            <th>Description</th>
            <th>Auteur</th>
            <th>Date de publication</th>
            <th>Action</th>

        </tr>
    </thead>
    <tbody>

        {% if articles is defined %}
        {% if articles is not empty  %}

        {% for article in articles |sort((a, b) => b.id <=> a.id) %}

        <tr>
            <td>{{article.title}}</td>
            <td><a href="/article/{{article.name}}">./article/{{article.name}}</a></td>
            <td>{{article.creationDate|date("d/m/Y")}}</td>
            <td>{{article.description}}</td>
             <td>{{article.author}}</td>
            <td>{{article.publishDate|date("d/m/Y")}}</td>
            <td>

            

                {% set decision = '
                
                <a href="./edit-article/'~ article.id ~'"><span class="material-symbols-outlined decision-button">edit</span></a>
                
                <span data-action="delete" data-section="article" data-id="'~ article.id ~'" class="material-symbols-outlined open-editor">delete</span>' 
                
                
                %}

                 {{decision|raw}}                           
            </td>
        </tr>

        {% endfor %}
          {% else %}
                <tr><td colspan="7">Aucun résultat</td></tr>
        {% endif %}
        {% else %}
                <tr><td colspan="7">Aucun résultat</td></tr>
        {% endif %}

    </tbody>
</table>
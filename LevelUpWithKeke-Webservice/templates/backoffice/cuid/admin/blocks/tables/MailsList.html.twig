    <div id="list-mails" >
    <div class="flexible">

        {% set i = 0 %}
        {% for mail in mails %}


        <div id="mail-{{mail.id}}" class="image-card">

            <div class="image" style="background-image:url({{mail.mailType.backgroundImage}})">
            <h2>{{mail.title}}</h2>

            
            </div>

            <div class="info">
                <h2>Mail auto #{{mail.id}} :</h2>
                <ul>
                    <li>
                    <p> {{mail.mailType.description}}</p>
                    
                     </li>

                    
                    
                    {#
                    <li>

                        {% if mail.activated == 1 %}
                        Activé
                        {% else %}
                        Desactivé
                        {% endif %}
                    </li>
                    #}


                    <li>
                    
                    <a href="./edit-mail/{{mail.id}}"><button>Modifier cette ce mail automatique</button></a>
                    <br><a target="_blank" href="{{mail.mailType.urlDemo}}"><button>Voir le résultat</button></a>
                    
                    </li>
                </ul>
            
            </div>
        </div>

            {% set i = i + 1 %}

           {% if i is divisible by(3)%} </div><div class="flexible"> {% endif %}

        {% endfor %}
    </div>
    </div>

       {% extends "/backoffice/cuid/base.html.twig" %}
    

        {% block content %}

            <section id="fonctionnal">
                  <div id="main-title">
                    <div class="flexible">
                       
                        <h1>Bonjour {{user.firstname}},<br> Que souhaitez vous faire aujourd'hui?</h1>
                    </div>

                    <div id="square-menu" class="flexible">

                            <div class="left-side">

                                <nav id="profile" class="square">
                                        <h2>Votre profil</h2>
                                        <div class="flexible info-item">
                                                <img class="avatar" src="{{website.logo.link}}" />
                                                    <ul class="info-item-list">
                                                            <li><h3>{{website.homepage.title}}</h3></li>
                                                          
                                                            <li><strong>Propriétaire : </strong>{{website.owner}}</li>
                                                            <li><strong>Activité : </strong>{{website.activity}}</li>
                                                            <li><strong>Pays : </strong>{{website.country}}</li>

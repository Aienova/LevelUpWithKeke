                 <div><label>Login</label><input type="text" name="login" required/></div>
                 <div><label>Ihr Passwort</label><input type="password" name="password" required/></div>
                <div><label>Bestätigen Sie Ihr Passwort</label><input type="password" name="confirm_password" required/></div>


                <div class="flexible">
                <nav class="movestep" data-step="1">Vorheriger Schritt</nav>

                <div><input type="submit" value="Registrieren"></div>  

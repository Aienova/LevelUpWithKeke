                <div><label>Name</label><input type="text" name="surname" value="{{customer.surname}}"/></div>
                <div><label>Email</label><input type="text" name="email" value="{{customer.email}}"/></div>
                <div><label>Telefon</label><input type="text" name="telephone" value="{{customer.telephone}}"/></div>       
